<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_height="@dimen/_90ssp">

    <ImageView
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50ssp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_12ssp"
        android:src="@drawable/ic_graduates"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_12ssp"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_12ssp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12ssp"
            android:fontFamily="@font/poppinsbold"
            android:text="Enjoy Maker SanKranti Special Offers on Gift Cards!"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text="Up to Rs. 1500 Cashback. Buy Now"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:layout_marginTop="@dimen/_6ssp"
            android:text="2 min ago."
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>