<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_6ssp"
    android:layout_marginEnd="@dimen/_6ssp"
    app:cardCornerRadius="@dimen/_7ssp"
    android:layout_marginTop="@dimen/_7ssp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5ssp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6ssp"
                android:fontFamily="@font/poppins"
                android:text="Vehicle 1"
                android:layout_centerInParent="true"
                android:id="@+id/vehicle_number_series"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="@dimen/_23ssp"
                android:id="@+id/btn_delete"
                android:layout_height="@dimen/_23ssp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_action_delete"
                app:tint="@color/black" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_8ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_23ssp"
                android:layout_height="@dimen/_23ssp"
                android:src="@drawable/ic_action_my_vehicle"
                app:tint="@color/quantum_pink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="@dimen/_8ssp"
                android:text="Tracktor"
                android:id="@+id/vehicle_number"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:fontFamily="@font/poppins"
                android:visibility="gone"
                android:text="(Vehicle number)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:src="@drawable/ic_action_my_status"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:text="Pending"
                android:id="@+id/status"
                android:layout_marginStart="@dimen/_8ssp"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:fontFamily="@font/poppins"
                android:visibility="gone"
                android:text="(Vehicle Status)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_15ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/delivery_truck" />

            <TextView
                android:id="@+id/vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12ssp"
                android:fontFamily="@font/poppins"
                android:text="21020202"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:visibility="gone"
                android:fontFamily="@font/poppins"
                android:text="(Vehicle Number)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_15ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/ic_action_call"
                app:tint="@color/project_color" />

            <TextView
                android:id="@+id/contact_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12ssp"
                android:fontFamily="@font/poppins"
                android:text="21020202"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="@dimen/_15ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/ic_action_edit"
                android:id="@+id/edit_contact"
                app:tint="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:visibility="gone"
                android:fontFamily="@font/poppins"
                android:text="(Vehicle Number)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7ssp"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="@dimen/_7ssp"
            android:id="@+id/date_created"
            android:text="21020202"
            android:textColor="@color/black"
            android:textSize="13dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>