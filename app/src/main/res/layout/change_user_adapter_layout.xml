<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardElevation="8dp"
    android:id="@+id/parent_of_card"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="28dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_link"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:src="@drawable/otp_images"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Vehicle Owner"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:id="@+id/ownerName"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check1"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_action_check_circle"
                    android:layout_alignParentEnd="true"
                     />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"
                android:text="KYC NEEDED"
                android:textColor="@color/black"
                android:id="@+id/belowOwner"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:text="Full name - Address"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/belowOwner2"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
