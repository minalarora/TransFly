<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_dialog_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinsbold"
            android:text="Forgot Password"
            android:textColor="@color/quantum_pink"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_close"
            android:layout_centerVertical="true"
            android:id="@+id/clear_dialog"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            app:tint="@color/black" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:text="Please type in the Registered Mobile Number"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:fontFamily="@font/poppinsmedium"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/email"
            android:background="@drawable/round_as_edittext"
            android:hint="Your Mobile Number"
            android:padding="10dp"
            android:paddingStart="8dp"
            android:textSize="14dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/send_otp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_as_button"
            android:clickable="true"
            android:layout_marginBottom="12dp"
            android:drawablePadding="12dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>