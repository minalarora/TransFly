<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_action_back"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/back"
                android:fontFamily="@font/worksansmedium"
                android:text="My Profile"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/truck_cover"
                    android:scaleType="fitXY"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="-66dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:padding="@dimen/_8ssp"
                    android:id="@+id/circularImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="4dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50ssp"
                    android:layout_gravity="bottom|end"
                    app:cardBackgroundColor="@color/project_color"
                    app:cardCornerRadius="@dimen/_30ssp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_50ssp">

                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="@dimen/_30ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_camera"
                        app:tint="@color/white" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_25ssp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_28ssp"
                    android:layout_height="@dimen/_28ssp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:src="@drawable/ic_action_person"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/project_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/font_opensans"
                        android:text="Name"
                        android:alpha="0.7"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_6ssp"
                        android:id="@+id/name_of_user"
                        android:fontFamily="@font/font_opensans"
                        android:text="Shani Gupta"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_single_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_18ssp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_28ssp"
                    android:layout_height="@dimen/_28ssp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:src="@drawable/ic_action_email"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/project_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:id="@+id/email_icon"
                        android:fontFamily="@font/font_opensans"
                        android:text="Email"
                        android:alpha="0.7"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_below="@+id/email_icon"
                        android:layout_marginTop="@dimen/_6ssp"
                        android:id="@+id/email"
                        android:fontFamily="@font/font_opensans"
                        android:text="Shanipratap6615@gmail.com"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="@dimen/_23ssp"
                        android:layout_height="@dimen/_23ssp"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_12ssp"
                        android:id="@+id/edit_email"
                        android:src="@drawable/ic_action_pencil"
                        app:tint="@color/black" />

                </RelativeLayout>

            </LinearLayout>

            <include layout="@layout/layout_single_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_18ssp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_28ssp"
                    android:layout_height="@dimen/_28ssp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:src="@drawable/ic_action_phone_number"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/project_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/font_opensans"
                        android:text="Phone"
                        android:alpha="0.7"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_6ssp"
                        android:fontFamily="@font/font_opensans"
                        android:text="+91 1234567890"
                        android:id="@+id/phone"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_single_line"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

</layout>