<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_dialog_background"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:id="@+id/otp_string_text"
        android:lineSpacingExtra="6dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible" />

    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:textColor="@color/quantum_pink"
        app:OtpItemCount="4"
        app:OtpViewType="line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksansregular"
            android:gravity="center"
            android:padding="6dp"
            android:text="Did not Recieve?"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksansregular"
            android:gravity="center"
            android:padding="6dp"
            android:text="Resend OTP"
            android:textColor="@color/quantum_yellow"
            android:textSize="14dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_12ssp"
        android:layout_height="42dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/cancel"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Cancel"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/_7ssp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/otpSubmit"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/_8ssp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_horizontal|center_vertical"
                android:text="Otp Confirm"
                android:textAllCaps="true"
                android:textColor="@color/quantum_pink"
                android:textSize="12dp"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>