<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/project_color"
    tools:context=".Activty.TicketComplaintActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_16ssp"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40ssp"
            app:cardCornerRadius="@dimen/_8ssp"
            app:cardBackgroundColor="@color/black"
            android:layout_height="@dimen/_40ssp">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_feedback"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/poppinsbold"
            android:text="Get Feedback"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_36ssp"
            android:layout_height="@dimen/_36ssp"
            android:src="@drawable/default_profile"
            android:layout_marginEnd="@dimen/_12ssp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_as_project_code_upper_white"
        android:layout_marginTop="@dimen/_15ssp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_17ssp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center_horizontal"
            android:text="How to you like transfly"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:text="Add Rating"
                android:textColor="@color/project_color"
                android:textSize="14dp" />


            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="@dimen/_12ssp"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_25ssp"
                android:fontFamily="@font/poppinsbold"
                android:text="What would like to improve"
                android:textColor="@color/project_color"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:lines="5"
                android:hint="Modify your feedback here"
                android:fontFamily="@font/font_opensans"
                android:gravity="top"
                android:paddingStart="@dimen/_9ssp"
                android:paddingEnd="@dimen/_9ssp"
                android:textSize="@dimen/_14ssp"
                android:paddingTop="@dimen/_9ssp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14ssp"
                android:background="@drawable/round_as_eddittext"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_25ssp"
                android:fontFamily="@font/poppinsbold"
                android:text="Location Details"
                android:textColor="@color/project_color"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_14ssp"
                android:hint="Add Location Details"
                android:fontFamily="@font/font_opensans"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/design_as_edittext_gradient"
            android:elevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppinsbold"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>