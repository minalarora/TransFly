<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_blue"
        tools:context=".Activty.OtpScreen">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/mobile3"
            android:layout_marginTop="@dimen/_20sdp"
            android:scaleType="centerInside"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_140sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_50sdp"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineHeight="@dimen/_20sdp"
                android:text="HAVE YOU RECEIVED A\nVERIFICATION CODE ?"
                android:textColor="@color/white"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="@font/poppinsbold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="WE ARE AUTOMATICALLY DETETECTING A SMS SENT TO YOUR MOBILE NUMBER .....8278"
                android:textColor="@color/white"
                android:lineHeight="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="ENTER 4 DIGITS CODE"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:fontFamily="@font/poppinsmedium"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_10sdp">


                <EditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:id="@+id/editText1"
                    android:inputType="number"
                    android:lines="1"
                    android:cursorVisible="false"
                    android:imeOptions="actionNext"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/otp_rectangle"
                    />

                <EditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="20sp"
                    android:id="@+id/editText2"
                    android:inputType="number"
                    android:lines="1"
                    android:imeOptions="actionNext"
                    android:maxLength="1"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/otp_rectangle"
                    />

                <EditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="20sp"
                    android:imeOptions="actionNext"
                    android:maxLength="1"
                    android:id="@+id/editText3"
                    android:inputType="number"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/otp_rectangle"
                    />

                <EditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:id="@+id/editText4"
                    android:inputType="number"
                    android:lines="1"
                    android:imeOptions="actionDone"
                    android:cursorVisible="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/otp_rectangle"
                    />





            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:text="RESEND CODE IN 00:00"
                android:textColor="@color/white"
                android:lineHeight="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/poppinsmedium"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="@color/project_color"
                app:cardCornerRadius="@dimen/_30sdp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="VERIFY MOBILE"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>