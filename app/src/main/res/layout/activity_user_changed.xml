<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activty.UserChangedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_action_back"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            app:tint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Select User Type"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/round_as_project_code_upper"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            app:cardCornerRadius="18dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            app:cardElevation="8dp"
            android:layout_height="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:text="SELECT USER : TRADER"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="6dp"
            android:text="you change your current user type and sent it for approval"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:id="@+id/card1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_images"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Vehicle Owner"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/check1"
                            android:visibility="gone"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_action_check_circle"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/project_color" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="KYC NEEDED"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Full name - Address"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:id="@+id/card2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_images"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Transporter"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/check2"
                            android:visibility="gone"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_action_check_circle"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/project_color" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="KYC NEEDED"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Full name - Address"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:id="@+id/card3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_images"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Field staf"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/check3"
                            android:visibility="gone"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_action_check_circle"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/project_color" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="KYC NEEDED"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Full name - Address"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:id="@+id/card4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_images"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Area Manager"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/check4"
                            android:visibility="gone"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_action_check_circle"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/project_color" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="KYC NEEDED"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Full name - Address"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        app:cardCornerRadius="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        android:id="@+id/checkedRound"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_check_icon"
            app:tint="@color/project_color" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
</layout>