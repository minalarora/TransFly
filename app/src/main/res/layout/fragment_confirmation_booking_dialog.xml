<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_dialog_background">

    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/personAdd"
        android:alpha="0.9"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.03"
        android:text="Confirm Booking"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35ssp"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/_8ssp"
        android:background="@drawable/round_as_invoice"
        android:orientation="horizontal"
        android:padding="@dimen/_6ssp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:fontFamily="@font/poppins"
            android:text="Vehicle No."
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/vehicle_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="1000 K.g"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35ssp"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_7ssp"
        android:background="#eeeeee"
        android:layout_marginEnd="@dimen/_8ssp"
        android:orientation="horizontal"
        android:padding="@dimen/_6ssp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:fontFamily="@font/poppins"
            android:text="Rate"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="33.33 %"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35ssp"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_7ssp"
        android:layout_marginEnd="@dimen/_8ssp"
        android:background="@drawable/round_as_invoice"
        android:orientation="horizontal"
        android:padding="@dimen/_6ssp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:fontFamily="@font/poppins"
            android:text="HSD"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/hsd_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="5000 rupees"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35ssp"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_7ssp"
        android:background="#eeeeee"
        android:layout_marginEnd="@dimen/_8ssp"
        android:orientation="horizontal"
        android:padding="@dimen/_6ssp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:fontFamily="@font/poppins"
            android:text="Cash"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cash_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="20 percent"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_12ssp"
        android:layout_height="42dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/no"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_semibold"
                android:text="NO"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/_7ssp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/yes"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/_8ssp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_horizontal|center_vertical"
                android:text="YES"
                android:textAllCaps="true"
                android:textColor="@color/quantum_pink"
                android:textSize="12dp"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>