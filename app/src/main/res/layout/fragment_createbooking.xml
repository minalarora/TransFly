<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Frament.CreatebookingFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:gravity="center"
   >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8ssp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="left"
        android:text="OR"
        android:id="@+id/text"
        android:textAllCaps="true"
        android:textColor="@color/dark_gray"
        android:textSize="12dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8ssp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="left|center_vertical"
        android:text="SELECT A VEHICLE:"
        android:textAllCaps="true"
        android:textColor="@color/quantum_pink"
        android:textSize="12dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_eddittext_round">

        <Spinner
            android:id="@+id/register_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:entries="@array/vehicle_number"
            android:fontFamily="@font/poppins"
            style="@style/SpinnerTheme"
            android:theme="@style/SpinnerTheme" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8ssp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center_horizontal|center_vertical"
        android:text="OR"
        android:textAllCaps="true"
        android:textColor="@color/dark_gray"
        android:textSize="8dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8ssp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="left|center_vertical"
        android:text="CREATE A VEHICLE:"
        android:textAllCaps="true"
        android:textColor="@color/quantum_pink"
        android:textSize="12dp"
        android:textStyle="bold"

        />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/poppins"
            android:hint="Vehicle Number"
            android:textColorHint="@color/black"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:id="@+id/vehicle"
            android:inputType="text"
            android:background="@drawable/bottom_line"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />






        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/poppins"
            android:hint="Contact Number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:id="@+id/driver"
            android:inputType="text"
            android:background="@drawable/bottom_line"
            android:textSize="@dimen/_10ssp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_12ssp"
        android:layout_height="42dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/cancel"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Cancel"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/_7ssp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/otpSubmit"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/_8ssp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_horizontal|center_vertical"
                android:text="Confirm Booking"
                android:textAllCaps="true"
                android:textColor="@color/quantum_pink"
                android:textSize="12dp"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
    </RelativeLayout>
</layout>