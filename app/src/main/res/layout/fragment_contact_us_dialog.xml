<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_dialog_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:id="@+id/text"
            android:layout_marginTop="@dimen/_15ssp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/_15ssp"
            android:fontFamily="@font/open_sans_semibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here for FAQ"
            android:id="@+id/faq"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="@dimen/_15ssp"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:layout_marginStart="@dimen/_15ssp"
            android:fontFamily="@font/poppinsmedium"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to us "
        android:layout_marginTop="@dimen/_6ssp"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/_12ssp"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/_15ssp"
        android:fontFamily="@font/opensansregular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_height="46dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/phone"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_19ssp"
                android:layout_height="@dimen/_19ssp"
                android:src="@drawable/ic_phone_call"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Phone"
                android:layout_marginStart="@dimen/_12ssp"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/_7ssp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/telegram"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_19ssp"
                    android:layout_height="@dimen/_19ssp"
                    android:src="@drawable/ic_telegram"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/_8ssp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Telegram"
                    android:textAllCaps="false"
                    android:textColor="#013220"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>