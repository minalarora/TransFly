<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12ssp"
    android:layout_marginTop="@dimen/_8ssp"
    android:layout_marginBottom="@dimen/_4ssp"
    android:layout_marginEnd="@dimen/_5ssp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/position_zero"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_42ssp"
        android:layout_height="@dimen/_42ssp"
        app:cardCornerRadius="@dimen/_30ssp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/project_color"
        >

        <ImageView
            android:layout_width="@dimen/_24ssp"
            android:layout_height="@dimen/_24ssp"
            android:src="@drawable/ic_action_location"
            android:layout_gravity="center"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby"
            android:layout_gravity="center_horizontal"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:fontFamily="@font/opensansregular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/postion_any"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_42ssp"
            android:layout_height="@dimen/_42ssp"
            android:layout_gravity="center"
            android:src="@drawable/push_pull_images" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iceland"
            android:layout_gravity="center_horizontal"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:fontFamily="@font/opensansregular"/>

    </LinearLayout>

</LinearLayout>