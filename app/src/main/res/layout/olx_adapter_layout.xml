<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="1dp"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="@dimen/_1ssp"
    android:layout_height="@dimen/_180sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:background="@color/black"
            android:id="@+id/image_product"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/card_seller_image"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_12ssp"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/opensansregular"
            android:text="50000 R.s"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:id="@+id/title"
            android:layout_marginEnd="@dimen/_6ssp"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/opensansregular"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley"
            android:textColor="@color/quantum_googgreen900"
            android:textSize="13dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>