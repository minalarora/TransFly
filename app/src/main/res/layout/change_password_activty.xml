<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#ff0000"
    tools:context=".Activty.ChangePasswordActivity"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables,UselessParent">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_action_back"
                    android:id="@+id/back"
                    app:tint="@color/black" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_action_password_lock"
                    android:id="@+id/lock"
                    android:layout_gravity="center"
                    app:tint="#000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password"
                        android:textSize="22sp"
                        android:alpha="0.9"
                        android:id="@+id/notice"
                        android:fontFamily="@font/poppinsmedium"
                        android:letterSpacing="0.025"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_marginTop="23dp"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    app:passwordToggleTint="@color/black"
                    app:passwordToggleDrawable="@drawable/show_password_selector"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.043"
                        android:fontFamily="@font/poppinsmedium"
                        android:drawablePadding="5dp"
                        android:minHeight="35dp"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:padding="12dp"
                        android:background="@drawable/round_as_edittext"
                        android:drawableStart="@drawable/ic_action_password_lock"
                        android:hint="Change Password" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_repassword"
                    android:layout_width="match_parent"
                    android:layout_marginTop="23dp"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/show_password_selector"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/reenter_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="35dp"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_action_password_lock"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:background="@drawable/round_as_edittext"
                        android:padding="12dp"
                        android:letterSpacing="0.043"
                        android:hint="@string/reenter_password" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:layout_marginTop="29dp"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/submit"
                    android:letterSpacing="0.04"
                    android:background="@drawable/round_as_button"
                    android:fontFamily="@font/poppinsmedium"
                    />


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/loading_view_transparent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>