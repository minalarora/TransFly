<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_12ssp"
    app:cardCornerRadius="@dimen/_8ssp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_12ssp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_50ssp"
                android:src="@drawable/box_animation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_15ssp"
                android:id="@+id/to_from_dest"
                android:fontFamily="@font/poppins"
                android:text="Anand(GJ) - Kamrej(GJ)"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/date_created"
            android:layout_marginStart="@dimen/_15ssp"
            android:fontFamily="@font/poppins"
            android:text="Posted at 21 Dec, 10:12 AM | Expires in 45 hours"
            android:textColor="#8c8c8c"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_13ssp"
            android:layout_marginStart="@dimen/_15ssp"
            android:layout_marginEnd="@dimen/_15ssp"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2ssp"
            android:visibility="gone"
            android:id="@+id/vehicleNamepParent"
            android:layout_marginStart="@dimen/_13ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:id="@+id/image_default"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_driver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:text="Minal gareeb Driver"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:id="@+id/vehile_owner"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:fontFamily="@font/poppins"
                android:text="(Owner name)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobileNumberParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginStart="@dimen/_13ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@drawable/ic_smartphone_number" />

            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:text="+91 "
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:fontFamily="@font/poppins"
                android:text="(Driver Number)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3ssp"
            android:layout_marginStart="@dimen/_20ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_15ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/delivery_truck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/vehicle_number"
                android:layout_marginStart="@dimen/_12ssp"
                android:fontFamily="@font/poppins"
                android:text="21020202"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:fontFamily="@font/poppins"
                android:text="(Vehicle Number)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6ssp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_20ssp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_15ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/estimate_rate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_12ssp"
                android:fontFamily="@font/poppins"
                android:id="@+id/price_rate"
                android:text="5000"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4ssp"
                android:fontFamily="@font/poppins"
                android:text="(In R.s)"
                android:textColor="#8c8c8c"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_12ssp"
            android:layout_height="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/share"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Share"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/_7ssp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/show_invoice"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/_8ssp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Show Invoice"
                    android:textAllCaps="true"
                    android:textColor="@color/project_color"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>