<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/project_color"
    tools:context=".Activty.TicketComplaintActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/bottom_space"
        android:layout_marginBottom="-23dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_16ssp"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30ssp"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_height="@dimen/_30ssp">

                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="@dimen/_30ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_feedback"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/back"
                    android:fontFamily="@font/poppinsbold"
                    android:text="On-Road Assistance"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_36ssp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_36ssp"
                    android:src="@drawable/default_profile"
                    android:layout_marginEnd="@dimen/_12ssp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/round_as_project_code_upper_white"
                android:layout_marginTop="@dimen/_15ssp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_marginEnd="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Select Complain"
                        android:textColor="@color/project_color"
                        android:textSize="13dp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:id="@+id/select_complaint"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Break Down"
                            android:id="@+id/break_down"
                            android:checked="true"
                            android:paddingStart="@dimen/_6ssp"
                            android:fontFamily="@font/poppins"
                            android:textSize="15dp"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accidental"
                            android:id="@+id/accident"
                            android:paddingStart="@dimen/_6ssp"
                            android:fontFamily="@font/poppins"
                            android:textSize="15dp"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading Problem"
                            android:id="@+id/loading_problem"
                            android:paddingStart="@dimen/_6ssp"
                            android:fontFamily="@font/poppins"
                            android:textSize="15dp"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other Support"
                            android:id="@+id/other_support"
                            android:paddingStart="@dimen/_6ssp"
                            android:fontFamily="@font/poppins"
                            android:textSize="15dp"
                            />

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:textColorHint="#8c8c8c"
                        app:hintAnimationEnabled="true">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:hint="Driver Name"
                            android:id="@+id/driver_name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:textColorHint="#8c8c8c"
                        app:hintAnimationEnabled="true">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:hint="Driver Phone Number"
                            android:id="@+id/driver_phone"
                            android:imeOptions="actionNext"
                            android:maxLines="10"
                            android:inputType="number"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4ssp"
                    android:textColorHint="#8c8c8c"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:hint="Vehicle Number"
                        android:id="@+id/vehicle_number"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:textColorHint="#8c8c8c"
                        app:hintAnimationEnabled="true">

                        <EditText
                            android:id="@+id/location_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:hint="Location"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_18ssp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Add Message"
                        android:textColor="@color/project_color"
                        android:textSize="13dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:lines="5"
                        android:hint="Type Your Message"
                        android:fontFamily="@font/font_opensans"
                        android:gravity="top"
                        android:paddingStart="@dimen/_9ssp"
                        android:id="@+id/ticket_complaint"
                        android:paddingEnd="@dimen/_9ssp"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_9ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14ssp"
                        android:background="@drawable/round_as_eddittext"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_25ssp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Location Details"
                        android:textColor="@color/project_color"
                        android:textSize="13dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="@dimen/_14ssp"
                        android:hint="Add Location Details"
                        android:fontFamily="@font/font_opensans"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/submit"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/_30ssp"
                    android:background="@drawable/design_as_edittext_gradient"
                    android:elevation="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.irfaan008.irbottomnavigation.SpaceNavigationView
        android:id="@+id/bottom_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:space_background_color="@color/white"
        app:active_item_color="@color/project_color"
        app:inactive_item_color="@color/project_color"
        app:active_centre_button_background_color="@color/project_color"
        app:centre_button_color="@color/project_color"
        app:inactive_centre_button_icon_color="@color/white"
        app:active_centre_button_icon_color="@color/white"
        app:space_item_icon_only_size="@dimen/_18ssp"
        app:centre_button_icon="@drawable/ic_action_home_white"
        android:layout_gravity="bottom"/>


    <include layout="@layout/loading_view_transparent"/>

</RelativeLayout>