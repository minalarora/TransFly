<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#8c8c8c</item>
    </style>

    <style name="iconGenText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/font_opensans</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="bottom_typeface">
        <item name="android:typeface">serif</item>
    </style>

    <style name="textblack" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="textwhite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>



</resources>