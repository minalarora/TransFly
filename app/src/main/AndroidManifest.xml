<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.truck.transfly">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransFly">
        <activity android:name=".Activty.EmailScreen"></activity>
        <activity android:name=".Activty.WhoScreen" />
        <activity android:name=".Activty.OtpScreen" />
        <activity android:name=".Activty.MobileScreen" />
        <activity android:name=".Activty.LoginScreen" />
        <activity android:name=".Activty.ReferActivity" />
        <activity android:name=".Activty.FeedbackActivity" />
        <activity android:name=".Activty.TicketComplaintActivity" />
        <activity android:name=".Activty.KycEditActivity" />
        <activity android:name=".Activty.ProfileActivity" />
        <activity android:name=".Activty.SignUpActivity" />
        <activity android:name=".Activty.UserChangedActivity" />
        <activity android:name=".Activty.EnterMobileNumberActivty" />
        <activity android:name=".Activty.OtpValidation" />
        <activity android:name=".Activty.SplashActivity" />
        <activity android:name=".Activty.LoginActivity" />
        <activity android:name=".Activty.MapActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activty.MainActivity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />
    </application>

</manifest>